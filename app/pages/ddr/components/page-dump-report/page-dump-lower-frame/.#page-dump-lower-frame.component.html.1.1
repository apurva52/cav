<div class="ddr-iframe" *ngIf="(snapshot && !checkFlag)">
    <iframe width="100%" height="539px" frameborder="0" scrolling="yes" [attr.src]="snapshot"></iframe>
</div>
<div class="ddr-iframe" *ngIf="(recFrame && checkFlag)">
    <as-split direction="horizontal" class="ddr-split">
        <as-split-area size="50">
            <iframe frameborder="0" width="100%" height="539px" scrolling="yes" [attr.src]="recFrame"></iframe>
        </as-split-area>
        <as-split-area size="50">
            <iframe frameborder="0" width="100%" height="539px" scrolling="yes" [attr.src]="snapshot"></iframe>
        </as-split-area>
    </as-split>
</div>
